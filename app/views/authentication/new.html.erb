<%= render partial: "home/header" %>

<main role="main" class="container px-5 my-2">
  <div class="row mt-5">
    <div class="col-8 offset-2 col-md-6 offset-md-3">
      <% if flash[:error].present? %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>

      <%= form_with model: @user, url: "/auth", method: :post, local: true, data: { turbo: false } do |f| %>
        <h1 class="h3 mb-3 fw-normal">Login / Register</h1>
        <div class="form-floating mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", id: "floatingInput" %>
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Password", id: "floatingPassword" %>
          <label for="floatingPassword">Password</label>
        </div>
        <%= f.submit "Submit", class: "w-100 btn btn-lg btn-primary" %>
      <% end %>
    </div>
  </div>
</main>
