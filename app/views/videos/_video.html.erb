<div class="row">
  <div class="col-6">
    <div class="video-container">
      <%= video.embed_code.html_safe %>
    </div>
  </div>
  <div class="col-6">
    <div class="row">
      <div class="col-6">
        <p><%= video.title %></p>
      </div>
      <div class="col-6 text-end">
        <button class="btn btn-outline-primary me-1">Like</button>
        <button class="btn btn-outline-secondary">Dislike</button>
      </div>
    </div>
    <p>Shared by: <%= video.user.email %></p>
  </div>
</div>
