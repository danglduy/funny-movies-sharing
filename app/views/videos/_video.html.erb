<div class="row">
  <div class="col-6">
    <div class="video-container">
      <%= video.embed_code.html_safe %>
    </div>
  </div>
  <div class="col-6">
    <div class="row">
      <div class="col-6">
        <p><%= video.title %></p>
      </div>
      <% if user_signed_in? %>
        <%= render "video_reaction", video: video, video_reaction: video_reaction %>
      <% end %>
    </div>
    <p>Shared by: <%= video.user.email %></p>
  </div>
</div>
